{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ecr:GetDownloadUrlForLayer",
        "ecr:BatchGetImage",
        "ecr:BatchCheckLayerAvailability"
      ],
      "Resource": "arn:aws:ecr:${var.region}:${var.account_id}:repository/${var.environment}-${var.name}",
      "Condition": {
        "StringEquals": {
          "aws:sourceVpce": "vpce-${vpc_id}"
        }
      }
    },
    {
      "Effect": "Deny",
      "Principal": "*",
      "Action": "ecr:*",
      "Condition": {
        "StringNotEquals": {
          "aws:sourceVpce": "vpce-${vpc_id}"
        }
      },
      "Resource": "arn:aws:ecr:${var.region}:${var.account_id}:repository/${var.environment}-${var.name}"
    }
  ]
}